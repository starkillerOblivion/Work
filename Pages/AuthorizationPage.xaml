<Page x:Class="Work.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Work.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txbLogin" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Height="40" VerticalAlignment="Bottom"/>
        <TextBlock Text="Пароль" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="psbPassword" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Height="40" VerticalAlignment="Bottom"/>
        <Button x:Name="btnAuthor" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Content="Авторизоваться" Height="40" Width="200" Click="btnAuthor_Click"/>
        <TextBlock Text="Регистрация???" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Center" MouseDown="MouseDown" MouseEnter="MouseEnter" MouseLeave="MouseLeave"/>
    </Grid>
</Page>
